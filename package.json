{
  "name": "vot-cli",
  "version": "2.0.0",
  "description": "A small script that allows you to download an audio translation from Yandex via the terminal.",
  "type": "module",
  "bin": "./dist/index.js",
  "scripts": {
    "update:config": "bun run scripts/updateConfig.ts",
    "update:schema": "bun run scripts/codeGen.ts",
    "update:all": "bun run update:config && bun run update:schema",
    "compile": "bun run update:all && bun run scripts/crossCompile.ts",
    "build:bun": "bun run build",
    "build": "bun run update:all && tsc --project tsconfig.build.json --outdir ./dist && tsc-esm-fix --tsconfig tsconfig.build.json",
    "lint": "bunx oxlint --ignore-path=.oxlintignore && bunx eslint",
    "prepare": "bunx husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FOSWLY/vot-cli.git"
  },
  "keywords": [
    "cli",
    "vot",
    "vot-cli",
    "voice-over-translation",
    "downloader",
    "foswly"
  ],
  "author": "Toil",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FOSWLY/vot-cli/issues",
    "email": "me@toil.cc"
  },
  "engines": {
    "node": ">=18.3.0"
  },
  "homepage": "https://github.com/FOSWLY/vot-cli/#readme",
  "dependencies": {
    "@vot.js/core": "^2.2.0",
    "@vot.js/node": "^2.2.0",
    "@vot.js/shared": "^2.2.0",
    "listr2": "^8.2.5",
    "minimist": "^1.2.8",
    "yoctocolors": "^2.1.1"
  },
  "devDependencies": {
    "@types/bun": "^1.2.0",
    "@types/eslint__js": "^8.42.3",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-oxlint": "^0.15.8",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "oxlint": "^0.15.8",
    "prettier": "^3.4.2",
    "tsc-esm-fix": "^3.1.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0"
  }
}
